pipeline {
    agent any 



    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/saeedhmohd244/kubernetics-project.git'
            }
        }

        stage('Build Artifact') {
            steps {
                sh '''
                java -version
                cd spring-boot-app/
                mvn clean install
                '''
            }
        }
                }
            }
        }
    }
}
